<p id="notice"><%= notice %></p>

<%= render 'header', product: @products %>

<h1>Great Buy</h1>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>SKU</th>
      <th>Product Name</th>
      <th>Price $</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.image, :alt => "rss feed", :class => "img-rounded", height: 145, width: 145) %></td>
        <td><%= product.sku %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @products %>
