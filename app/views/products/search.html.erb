<%= render 'header', product: @products %>

<div class="jumbotron">
  <h3><%= @products.took %> milliseconds</h3>
</div>

<% if @products.length != 0 %>
  <table class="table">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= image_tag(product.image, :alt => "rss feed", :class => "img-rounded", height: 145, width: 145) %></td>
          <td><%= product.sku %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <%= image_tag("https://image.slidesharecdn.com/datensparsamkeit-141001035405-phpapp02/95/datensparsamkeit-18-638.jpg?cb=1412135696") %>
<% end %>


<%= will_paginate @products %>
